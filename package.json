{
  "name": "gemini-cli-mcp-server",
  "version": "0.3.1",
  "description": "MCP server wrapper for Google's Gemini CLI",
  "author": "Cinnamobot",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "gemini-cli-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist",
    "locales"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gemini",
    "gemini-cli",
    "google",
    "ai",
    "llm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Cinnamobot/gemini-cli-mcp-server"
  },
  "bugs": {
    "url": "https://github.com/Cinnamobot/gemini-cli-mcp-server/issues"
  },
  "homepage": "https://github.com/Cinnamobot/gemini-cli-mcp-server#readme",
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch run index.ts",
    "build": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\" && bun build --target=node --outdir=dist --sourcemap index.ts && node -e \"const f='dist/index.js';require('fs').writeFileSync(f,'#!/usr/bin/env node\\n'+require('fs').readFileSync(f))\" && node -e \"require('fs').cpSync('locales','dist/locales',{recursive:true})\"",
    "build:prod": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\" && bun build --target=node --outdir=dist --minify --sourcemap=none index.ts && node -e \"const f='dist/index.js';require('fs').writeFileSync(f,'#!/usr/bin/env node\\n'+require('fs').readFileSync(f))\" && node -e \"require('fs').cpSync('locales','dist/locales',{recursive:true})\"",
    "lint": "biome lint .",
    "lint:md": "markdownlint-cli2 '**/*.md'",
    "lint:fix": "biome lint --write .",
    "lint:md:fix": "markdownlint-cli2 --fix '**/*.md'",
    "format": "biome format --write .",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "check": "biome ci .",
    "prepare": "bun run build:prod && lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@types/bun": "latest",
    "@types/cross-spawn": "^6.0.6",
    "lefthook": "^1.11.14",
    "markdownlint-cli2": "^0.18.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "cross-spawn": "^7.0.6",
    "zod": "^3.25.67"
  },
  "markdownlint-cli2": {
    "ignores": [
      "node_modules/**",
      ".git/**",
      ".claude/**",
      "tmp/**"
    ],
    "config": {
      "default": true,
      "MD013": false,
      "MD033": false,
      "MD041": false,
      "no-hard-tabs": false
    },
    "fix": true,
    "customRules": []
  }
}
