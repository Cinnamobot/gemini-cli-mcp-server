{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "files": {
    "include": [
      "**",
      "!**/dist/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  }
}